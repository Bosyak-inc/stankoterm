#!/bin/sh

_die() {
	[[ $1 != "" ]] && echo "$1"
	echo "Terminating"
	exit 1
}

compil="sassc"

which $compil &>/dev/null
[[ $? == 1 ]] && _die "No $compil compiler"

emsg=""
[[ -z $1 || ! -f $1 ]] && [[ -z $2 || ! -f $2 ]] && _die "invalid arg"

$compil $1 $2
if [[ $? == 0 ]]; then
	echo "Styles succesfuly updated"
else
	echo "Cant update styles"
fi
